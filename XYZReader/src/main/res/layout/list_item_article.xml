<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:elevation="@dimen/card_resting_elevation"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/image_scrim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_scrim"
            />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_item_text_margin"
            android:paddingTop="@dimen/list_item_text_margin"
            android:paddingRight="@dimen/list_item_text_margin"
            android:textColor="@color/ltgray"
            android:ellipsize="end"
            android:maxLines="4"
            android:layout_gravity="center|top"/>

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_item_text_margin"
            android:paddingRight="@dimen/list_item_text_margin"
            android:paddingBottom="@dimen/list_item_text_margin"
            android:textColor="@color/ltgray"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_gravity="center|bottom"/>

    </FrameLayout>

</android.support.v7.widget.CardView>
